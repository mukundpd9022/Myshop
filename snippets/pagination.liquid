{% if pagination.pages > 0 %}
  <nav role="navigation" class="flex justify-center my-8">
    {% if pagination.previous %}
        <a href="{{ pagination.previous.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-5 py-2 mx-1 rounded-md font-medium">{{ pagination.previous.title }}</a>
        
    {% endif %}

    {% for part in pagination.parts %}
        {% if part.is_link %}
            <a href="{{ part.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-5 py-2 mx-1 rounded-md font-medium">{{ part.title }}</a>
        {% else %}
            <span class="border border-gray-600 text-white bg-gray-600 px-5 py-2 mx-1 rounded-md font-medium">{{ part.title }}</span>
        {% endif %}


        
    {% endfor %}

    {% if pagination.next %}
        <a href="{{ pagination.next.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-5 py-2 mx-1 rounded-md font-medium">{{ pagination.next.title }}</a>
        
    {% endif %}

  </nav>
    
{% endif %}