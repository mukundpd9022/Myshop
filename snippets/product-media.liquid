{% case media.media_type %}
    {% when 'image' %}
        <img src="{{ media | image_url: width: 500}}" alt="{{ media.alt }}" width="200" height="200" class="w-full h-72 object-cover">
    {% when 'video' %}
       {{ media | video_tag: loop:true , autoplay: true , controls:true, class:"w-full h-72 object-cover" }}
    {% when 'external_video' %}
        {{ media | external_video_tag: class: 'w-full h-72 object-cover' }}

    {% when 'model' %}
        {{ media | model_viewer_tag }}

    {% else %}
        {{ media | media_tag }}    
   
        
{% endcase %}